@using QuanLy_TourDuLich.Models
@model List<Tour>

@helper Truncate(string text, int lengh)
{
    if (text.Length <= lengh)
    {
        @text
    }
    else
    {
        @text.Substring(0, lengh)<text>...</text>
    }
}


<strong style="font-size: 35px; color: black; margin-left: 20px" class="text-center">Sản phẩm liên quan</strong>
@{
    if (Model != null)
    {
        <div style="margin-left:80px">
            @foreach (var item in Model)
            {
                <div class="card" style="width: 18rem; border-radius: 10px; box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2), 0 6px 6px rgba(0, 0, 0, 0.23);">
                    @Html.Action("AnhChoCard", "Tour", new { id = item.Tour_id });
                    <div class="card-body">
                        <a href="~/Tour/ChiTietTour/@item.Tour_id" class="nav-link" style="font-size:20px;">@Truncate(item.Name, 50)</a>
                        <p class="text-body">Giá: <span class="text-danger">@String.Format("{0:0,00}", item.Gia) đ</span></p>
                    </div>
                </div>
                <br />
            }
        </div>
    }
}


