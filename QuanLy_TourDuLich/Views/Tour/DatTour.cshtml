@model QuanLy_TourDuLich.Models.Tour

@{
    ViewBag.Title = "Đặt Tour";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Đặt Tour: @Model.Name</h4>
                </div>
                <div class="card-body">
                    <form method="post" action="/dat-tour">
                        <!-- Mã Khách Hàng -->
                        <div class="form-group mb-3">
                            <label for="KhachHang_id" class="form-label">Tên Khách Hàng</label>
                            <input type="text" class="form-control" id="KhachHang_id" name="KhachHang_id" placeholder="Nhập mã khách hàng" required />
                        </div>

                        <!-- Hiển thị tên tour -->
                        <div class="form-group mb-3">
                            <label class="form-label">Tour</label>
                            <div class="border rounded p-2 bg-light">
                                @Model.Name
                            </div>
                        </div>

                        <!-- Ngày Khởi Hành -->
                        <div class="form-group mb-3">
                            <label class="form-label">Ngày Khởi Hành</label>
                            <div class="border rounded p-2 bg-light">
                                @ViewBag.NgayKhoiHanh
                            </div>
                        </div>

                        <!-- Ngày Kết Thúc -->
                        <div class="form-group mb-3">
                            <label class="form-label">Ngày Kết Thúc</label>
                            <div class="border rounded p-2 bg-light">
                                @ViewBag.NgayKetThuc
                            </div>
                        </div>


                        <!-- Số Người -->
                        <div class="form-group mb-3">
                            <label for="SoNguoi" class="form-label">Số Người</label>
                            <input type="number" class="form-control" id="SoNguoi" name="SoNguoi" min="1" value="1" placeholder="Nhập số người tham gia" required />
                        </div>

                        <!-- Trạng Thái  -->
                        <div class="form-group mb-3">
                            <label class="form-label">Trạng Thái</label>
                            <div class="border rounded p-2 bg-light">
                                @Model.TrangThai
                            </div>
                        </div>


                        <!-- Ghi Chú -->
                        <div class="form-group mb-3">
                            <label for="GhiChu" class="form-label">Ghi Chú</label>
                            <textarea class="form-control" id="GhiChu" name="GhiChu" rows="3" placeholder="Nhập ghi chú nếu có"></textarea>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary w-100">Tiếp tục</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

