@model IEnumerable<QuanLy_TourDuLich.Models.DatTour>

@{
    ViewBag.Title = "LichSuDatTour";
}

<div class="container col-md-9">
    <h2 style="font-family:Tahoma" class="text-success">LỊCH SỬ ĐẶT TOUR</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KhachHang_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayDat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tour_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoNguoi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GhiChu)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.KhachHang_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayDat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tour_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoNguoi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GhiChu)
                </td>
                <td>
                    <a href="~/DatTour/HuyTour/@item.DatTour_id" class="btn btn-success">Huỷ tour</a>
                </td>
            </tr>
        }
    </table>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>}
</div>