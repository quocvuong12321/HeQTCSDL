@model QuanLy_TourDuLich.Models.Review

@{ ViewBag.Title = "Viết đánh giá"; }

<h2>Viết đánh giá mới</h2>

@using (Html.BeginForm("VietDanhGia", "Taikhoan", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <!-- TourId Input -->
        <div class="form-group">
            @Html.LabelFor(model => model.TourId, "Mã Tour", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TourId, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TourId)
            </div>
        </div>

        <!-- KhachHangId Input -->
        <div class="form-group">
            @Html.LabelFor(model => model.KhachHangId, "Mã Khách Hàng", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.KhachHangId, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.KhachHangId)
            </div>
        </div>

        <!-- NoiDung (Nội dung đánh giá) Input -->
        <div class="form-group">
            @Html.LabelFor(model => model.NoiDung, "Nội dung đánh giá", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.NoiDung, new { @class = "form-control", rows = 5 })
                @Html.ValidationMessageFor(model => model.NoiDung)
            </div>
        </div>

        <!-- Vote (Số sao) Input -->
        <div class="form-group">
            @Html.LabelFor(model => model.Vote, "Số sao (1-5)", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Vote, new { @class = "form-control", @type = "number", @min = "1", @max = "5" })
                @Html.ValidationMessageFor(model => model.Vote)
            </div>
        </div>

        <!-- Submit Button -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm đánh giá" class="btn btn-primary" />
            </div>
        </div>
    </div>}

