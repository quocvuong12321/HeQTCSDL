@model IEnumerable<QuanLy_TourDuLich.Models.DanhGia>

@{
    ViewBag.Title = "QLDanhgia";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<h2>Danh sách các đánh giá</h2>

<table class="table">
    <tr>
        <th>
            <p>Mã Tour</p>
        </th>
        <th>
            <p>Mã Khách Hàng</p>
        </th>
        <th>
            <p>Nội dung</p>
        </th>
        <th>
            <p>Vote</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tour_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KhachHang_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Noidung)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vote)
        </td>
    </tr>
}

</table>
