@model QuanLy_TourDuLich.Models.NhanVien

@{
    ViewBag.Title = "Chi tiết Nhân Viên";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<h2>Chi tiết Nhân Viên</h2>

<div>
    <h4>Nhân Viên</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.NhanVien_id)</dt>
        <dd>@Html.DisplayFor(model => model.NhanVien_id)</dd>

        <dt>@Html.DisplayNameFor(model => model.HoTen)</dt>
        <dd>@Html.DisplayFor(model => model.HoTen)</dd>

        <dt>@Html.DisplayNameFor(model => model.Email)</dt>
        <dd>@Html.DisplayFor(model => model.Email)</dd>

        <dt>@Html.DisplayNameFor(model => model.DiaChi)</dt>
        <dd>@Html.DisplayFor(model => model.DiaChi)</dd>

        <dt>@Html.DisplayNameFor(model => model.DienThoai)</dt>
        <dd>@Html.DisplayFor(model => model.DienThoai)</dd>

        <dt>@Html.DisplayNameFor(model => model.GioiTinh)</dt>
        <dd>@(Convert.ToBoolean(Model.GioiTinh) ? "Nam" : "Nữ")</dd>

        <dt>@Html.DisplayNameFor(model => model.VaiTro)</dt>
        <dd>@Html.DisplayFor(model => model.VaiTro)</dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "ChinhSuaNhanVien", new { id = Model.NhanVien_id }) |
