@model QuanLy_TourDuLich.Models.PhanCong_NhanVien

@{
    ViewBag.Title = "Xóa Phân Công";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<h3>Bạn có chắc chắn muốn xóa phân công này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Tour.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Tour.Name)</dd>

        <dt>@Html.DisplayNameFor(model => model.NhanVien.HoTen)</dt>
        <dd>@Html.DisplayFor(model => model.NhanVien.HoTen)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về", "Index")
        </div>
    }
</div>