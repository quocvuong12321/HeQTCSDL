@model QuanLy_TourDuLich.Models.Tour
@{
    ViewBag.Title = "ThemHinhAnhTour";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";

}

<b style="font-size:45px; color:black">
    Thêm hình ảnh vào tour
</b>

@using (Html.BeginForm("ThemHinhAnhTour", "Tour", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="Tour_id" value="@Model.Tour_id"  />
        <div class="form-group">
            <Label class="col-md-2">Images</Label>
            <div class="col-md-10">
                <input type="file" class="form-control" name="fileUpload" multiple />
                @ViewBag.Thongbao
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


